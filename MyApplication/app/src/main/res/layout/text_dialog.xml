<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e3e3">

    <LinearLayout
        android:id="@+id/choose_text_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="请输入标题:"/>
        <EditText
            android:id="@+id/text_dialog_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入标题"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/choose_text_picture"
        android:layout_below="@id/choose_text_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="请输入内容:"/>
        <EditText
            android:id="@+id/text_dialog_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入内容"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/choose_text_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/text_dialog_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"/>
    </LinearLayout>
</RelativeLayout>
